<html>
    <head>
        <title>Laser Log</title>
    </head>
    <style>
        #title {
            text-align: center;
        }
        .center {
            margin: auto;
            width: 600px;
            border: 5px solid #00ff0d;
            padding: 10px;
        }
    </style>
    <script>
        function fetchFile(path, callback)
        {
            var httpRequest = new XMLHttpRequest();
            httpRequest.onreadystatechange = function() {
                if (httpRequest.readyState === 4) {
                    if (httpRequest.status === 200) {
                        if (callback) callback(httpRequest.responseText);
                    }
                }
            };
            
            httpRequest.open('GET', path);
            httpRequest.send(); 
        }

    </script>
    <body>
        <div class="center">
            <div id="title">
                <h2>Laser Log - Stratum0</h2>
            </div>
            <h3>Bitte Karte auf den Scanner legen um den Laser freizuschalten.</h3>
        </div>
        <script>
            setInterval(fetchFile, 1000, "/login", function status(res) {if (res == "true") {window.location.replace("/entry/new");}})
        </script>
    </body>
</html>